# Description: U-boot - The universal bootloader
# URL: http://www.denx.de/wiki/U-Boot/WebHome
# License: GPLv2

name=u-boot
version=2016.01
release=1
source=(ftp://ftp.denx.de/pub/u-boot/u-boot-$version.tar.bz2 boot.txt)

build(){
    cd $name-$version

    make ARCH=arm CROSS_COMPILE=$HOST- mx6cuboxi_defconfig
    make -j $JOBS ARCH=arm CROSS_COMPILE=$HOST-

    mkimage -A arm -T script -O linux -d $SRC/boot.txt $OUTPUT/boot.scr

    cp u-boot.img $OUTPUT
    cp SPL $OUTPUT
}

check(){
    check_tool mkimage "Available in Ubuntu package u-boot-tools"
}
